<!DOCTYPE html>
 <html>
    <head>
     <title>{% block title %}PiwkoBook!{% endblock %}</title>
      {% block stylesheets %}
            <!-- Compiled and minified CSS -->
          <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.2/css/materialize.min.css">
          <link rel="stylesheet" type="text/css" href="/css/style.css">
          <!-- Compiled and minified JavaScript -->
          <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.2/js/materialize.min.js"></script>
          <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
      {% endblock %}
      <!--Let browser know website is optimized for mobile-->
      <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    </head>

    <body>
    <nav>
        <div class="nav-wrapper">
          <div class="col s12">
                    {% if is_granted('ROLE_USER') %}
                        <a href="{{ path('logout') }}">Wyloguj</a>
                    {% else %}
                        <a href="{{ path('login') }}">Zaloguj</a>
                        <a href="/register" class="breadcrumb">Zarejestruj</a>
                    {% endif %}
    
    
           
            <a id="add_post" class="btn btn-floating btn-large cyan pulse"><i class="material-icons">edit</i></a>
          </div>
        </div>
  </nav>
          {% block body %}{% endblock %}

      {% block javascripts %}
          <!--Import jQuery before materialize.js-->
          <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
          <script type="text/javascript" src="js/materialize.min.js"></script>
      {% endblock %}
    </body>
  </html>
