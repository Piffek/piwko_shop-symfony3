{% extends 'baseAdmin.html.twig' %}

{% block body %}
    {% for product in allProducts %}
    	{{ product.name }}<br>
    	{{ product.price }} zł<br>
    	{{ product.promotion }}<br>
    	{{ product.buyAmount }}<br>
    	<a href=" {{ path('editProduct', {id:product.id}) }} ">Edytuj</a>
    	<a href=" {{ path('deleteProduct', {id:product.id}) }} ">Usuń</a>
    	<hr>
    {% endfor %}
{% endblock %}