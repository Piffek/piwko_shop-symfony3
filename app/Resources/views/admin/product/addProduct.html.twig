{% extends 'baseAdmin.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col s12">
                {{ form_start(form) }}
                    {{ form_errors(form) }}
                    {{ form_row(form.name) }}
                    {{ form_row(form.kind) }}
                    {{ form_row(form.price) }}
                    {{ form_row(form.amount) }}
                    {{ form_row(form.promotion) }}
					{{ form_row(form.textPromotion) }}
					{{ form_row(form.percentPromotion) }}
                    <button type="submit">Dodaj produkt</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}